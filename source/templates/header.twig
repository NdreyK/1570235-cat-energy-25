<header class="header">
  <div class="header__wrapper">
    <a class="header__logo" href="index.html" {% if permalink == "index.html" %}aria-current="page"{% endif %}>
      <img class="header__logotype" src="img/logotype.svg" alt="логотип кэтенерджи" width="191" height="38">
    </a>
    <nav class="main-nav">
      <button class="main-nav__toggle" type="button">
        <span class="visually-hidden">Открыть меню</span>
      </button>
      <ul class="main-nav__list site-list">
        {% for page in pages %}
          <li class="site-list__item">
            <a class="site-list__link" href="{{ page.path }}" {% if permalink == page.path %} aria-current="page" {% endif %}>{{ page.name }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>
